      <Label.Triggers>
        <DataTrigger TargetType="Label"
                     Binding="{Binding Source={x:Reference Entry1}, Path=IsFocused}" Value="True">
          <Setter Property="TextColor" Value="Black"></Setter>
          <Setter Property="FontAttributes" Value="bold"></Setter>
        </DataTrigger>
      </Label.Triggers>
    </Label>-->
  </StackLayout>

</ContentPage>